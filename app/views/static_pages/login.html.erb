<div class="container">

  <form class="form-signin" role="form" action="/sessions" method="post">
    <h2 class="form-signin-heading">Please sign in</h2>
    <br>
    <input  class="form-control" name="sessions[username]" placeholder="User Name" required autofocus>
    <br>
    <input type="password" class="form-control" name="sessions[password]" placeholder="Password" required>
    <br>
    <input id="captcha" class="form-control" name="sessions[captcha]"  placeholder="Captcha" required/><p><%= captcha_tag %></p>
    <br>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>

  <% flash.each do |key, value| %>
      <div class="form-signin"><div style="text-align: center;"><font color="red"><%= value %></font></div></div>
  <% end %>
</div>
